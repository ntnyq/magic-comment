{
  "publisher": "ntnyq",
  "name": "magic-comment",
  "displayName": "Magic Comment",
  "preview": true,
  "type": "commonjs",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "description": "Add annotations to magic comments",
  "keywords": [],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/magic-comment",
  "repository": {
    "type": "github",
    "url": "https://github.com/ntnyq/magic-comment.git"
  },
  "bugs": {
    "url": "https://github.com/ntnyq/magic-comment/issues/new"
  },
  "main": "./dist/index.js",
  "icon": "./res/logo.png",
  "files": [
    "LICENSE",
    "dist/*",
    "res/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "NODE_ENV=development tsup --watch",
    "generate:meta": "vscode-ext-gen --output src/meta.ts",
    "lint": "eslint .",
    "pack": "vsce package --no-dependencies",
    "prepare": "husky",
    "release": "run-s release:check release:build release:version release:publish",
    "release:build": "run-s generate:meta build",
    "release:check": "run-s lint typecheck",
    "release:publish": "vsce publish --no-dependencies",
    "release:version": "bumpp --all",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.3.1",
    "reactive-vscode": "^0.2.8"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.3.0",
    "@ntnyq/prettier-config": "^1.22.0",
    "@types/node": "^22.9.3",
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^3.2.1",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "pnpm": "^9.14.2",
    "prettier": "3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vscode-ext-gen": "^0.5.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Magic Comment",
        "title": "getLanguageConfig",
        "command": "magic-comment.getLanguageConfig"
      }
    ],
    "configuration": {
      "title": "Magic Comment",
      "properties": {
        "magic-comment.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable extension"
        },
        "magic-comment.include": {
          "type": "array",
          "default": [],
          "description": "Include files",
          "items": {
            "type": "string"
          }
        },
        "magic-comment.exclude": {
          "type": "array",
          "default": [],
          "description": "Exclude files",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,json,yml,yaml}": "eslint --fix"
  }
}
